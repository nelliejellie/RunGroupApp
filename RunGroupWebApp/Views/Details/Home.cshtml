@model HomeDetail


    <h2>Home Details</h2>

    <form asp-action="Home" method="post">
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" asp-for="@Model.Address">
        </div>
        <div class="form-group">
            <label for="City">City</label>
            <input type="text" class="form-control" id="City" name="City" asp-for="@Model.City">
        </div>
        <div class="form-group">
            <label for="Country">Country</label>
            <input type="text" class="form-control" id="Country" name="Country" asp-for="@Model.Country">
        </div>
        <button type="submit" class="btn btn-primary">Next</button>
    </form>
